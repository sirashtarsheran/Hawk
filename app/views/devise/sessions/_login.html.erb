<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: t('email'), class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= f.password_field :password, autocomplete: "off", placeholder: t('password'),  class: "form-control" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, t("rememberme") %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit t("login"), class: 'btn form-control btn-dark' %>
  </div>
  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <div style="padding-top:10px;">
      <%= link_to t("forgotyourpassword?"), new_password_path(resource_name) %><br />
    </div>
  <% end -%>
<% end %>